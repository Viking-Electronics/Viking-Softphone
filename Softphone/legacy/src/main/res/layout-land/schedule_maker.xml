<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/white_color"
                                                   android:id="@+id/new_schedule">

    <Button
            android:id="@+id/next_button"
            android:textColor="@color/dark_grey_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/resizable_assistant_button"
            android:backgroundTint="@color/button_color"
            android:text="Next" app:layout_constraintStart_toEndOf="@+id/picker" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"/>
    <Button
            android:id="@+id/back_button"
            style="@style/dialog_cancel_button_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/resizable_assistant_button"
            android:text="back" android:textAlignment="center" android:layout_marginTop="73dp" app:layout_constraintTop_toBottomOf="@+id/next_button" app:layout_constraintStart_toEndOf="@+id/picker" android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/day_buttons" android:layout_marginStart="32dp"/>
    <TimePicker android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/picker" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Block calls from"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/info_text" app:layout_constraintEnd_toEndOf="@+id/picker" app:layout_constraintStart_toStartOf="@+id/picker" app:layout_constraintHorizontal_bias="0.946" app:layout_constraintBottom_toBottomOf="@+id/picker" android:layout_marginBottom="16dp"/>
    <LinearLayout
            android:id="@+id/day_buttons"
            android:layout_height="50dp"
            android:background="@color/toolbar_color"
            android:orientation="horizontal"
            android:visibility="gone" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/picker" android:layout_width="match_parent">

        <ToggleButton
                android:id="@+id/Sunday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Monday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Tuesday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Wednesday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Thursday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Friday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <ToggleButton
                android:id="@+id/Saturday"
                style="@style/day_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="?attr/button_background_drawable"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
